<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.glassera.stracker">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/blackbox"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/blackbox"
            android:supportsRtl="true"
            android:theme="@style/Theme.Stracker"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".activity.dashboard.DashboardActivity"
                android:label="@string/title_activity_dashboard"
                android:theme="@style/Theme.Stracker.NoActionBar">
        </activity>
        <activity
                android:name=".activity.login.LoginActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>